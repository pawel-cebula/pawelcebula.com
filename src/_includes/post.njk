{% extends 'base.njk' %}

{% set heroHeading = title %}
{% set excerpt = description %}

{% block main %}
  <div class="wrapper post">
    <article 
      class="post__content"
      aria-labelledby="heroHeading"
      aria-describedby="heroSub heroComment"
    >
      <p class="post__snippet__date">{{ 'Published: ' + date | dateFilter + ' | ' + content | readingTime + ' read' }}</p>
      {% include 'tags.njk' %}
      {{ content | safe }}
    </article>
  </div>
{% endblock main %}