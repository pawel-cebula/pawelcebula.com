<section 
  class="wrapper features" 
  aria-labelledby="heroHeading" 
  aria-describedby="heroSub heroComment"
>
  {% for feat in features %}
    <div class="card-wrapper">
      <div class="features__item card-content">
        {% include 'svg/' + feat.icon + '.svg' %}
        <div class="features__item__info">
          <h3>{{ feat.name }}</h3>        
          <p>{{ feat.description }}</p>
        </div>
      </div>
    </div>
  {% endfor %}
</section>