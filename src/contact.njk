{% extends 'base.njk' %}

{% block main %}
  <div class="wrapper">
    <h1>Contact</h1>
    <h2>You can find me online at</h2>
    <ul class="list-reset contacts">
      {% for contact in contacts %}
        <li>
          <a href="{{ contact.url }}">
            {% include 'svg/' + contact.icon + '.svg' %}
            {{ contact.prompt }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock main %}