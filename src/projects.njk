{% extends 'base.njk' %}

{% block main %}
  <h1>Sample Projects</h1>
  <div>
    {% for project in projects %}
      <div>
        <img src="{{ project.image }}" alt="{{ project.name}} project image" style="max-width: 100%;">
        <h2>{{ project.name }}</h2>
        {% if project.url %}
          <a href="{{ project.url }}">{{ project.url }}</a>
        {% else %}
          <span>n/a</span>
        {% endif %}
        <a href="{{ project.github }}">
          {% include 'svg/github.svg' %}
        </a>
        <div>
          {% for tech in project.stack %}
            <span>{{ tech }}</span>
          {% endfor %}
        </div>
        <div>
          {% for p in project.description %}
            <p>{{ p }}</p>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock main %}
